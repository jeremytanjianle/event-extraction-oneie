{
    "bert_model_name": "bert-large-cased",
    "bert_cache_dir": "<BERT_CACHE_DIR>",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.5,
    "use_extra_bert": true,
    "extra_bert": -3,
  
    "use_global_features": true,
    "global_features":  ["role_role",
                        "event_role_num",
                        "role_entity",
                        "multi_role",
                        "relation_entity",
                        "relation_role_role",
                        "relation_relation",
                        "multi_event"],
    "global_warmup": 0,
  
    "linear_dropout": 0.4,
    "linear_bias": true,
    "entity_hidden_num": 150,
    "mention_hidden_num": 150,
    "event_hidden_num": 600,
    "relation_hidden_num": 150,
    "role_hidden_num": 600,
    "use_entity_type": true,
    "beam_size": 15,
    "beta_v": 2,
    "beta_e": 2,
    "relation_mask_self": true,
    "relation_directional": true,
    "symmetric_relations": ["PER-SOC"],
  
    "train_file": "<TRAIN_FILE_PATH>",
    "dev_file": "<DEV_FILE_PATH>",
    "test_file": "<TEST_FILE_PATH>",
    "log_path": "<OUTPUT_DIR>",
    "valid_pattern_path": "<VALID_PATTERN_DIR>",
    "ignore_title": true,
    "ignore_first_header": true,
  
    "accumulate_step": 1,
    "batch_size": 10,
    "eval_batch_size": 10,
    "max_epoch": 100,
    "learning_rate": 1e-3,
    "bert_learning_rate": 1e-5,
    "weight_decay": 1e-3,
    "bert_weight_decay": 1e-5,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
  
    "use_gpu": true,
    "gpu_device": 0
  }